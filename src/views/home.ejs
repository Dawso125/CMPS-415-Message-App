<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Bobber - Messenger App</title>
		<!-- Link to Bootstrap CSS file -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
		<!-- Link to the external CSS file -->
		<link href="css/App.css" rel="stylesheet" />
	</head>
	<body class="home-body">
		<!-- Apply home-body class to the body -->
		<div class="container">
			<!-- Apply Bootstrap's container class -->
			<h1 class="home-heading">Welcome to Bobber</h1>
			<!-- Apply home-heading class to the heading -->
			<p class="lead">A modern messenger app for seamless communication.</p>
			<!-- Apply Bootstrap's lead class -->
			<div class="d-grid gap-2">
				<a href="/login" class="btn btn-primary home-btn">Login</a>
				<!-- Apply home-btn class to the button and Bootstrap's btn and btn-primary classes -->
				<a href="/register" class="btn btn-outline-primary home-btn"
					>Register</a
				>
				<!-- Apply home-btn class to the button and Bootstrap's btn and btn-outline-primary classes -->
			</div>
		</div>
