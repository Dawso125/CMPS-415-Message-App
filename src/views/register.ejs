<!-- views/home.ejs -->

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Bobber - Messenger App</title>
		<!-- Link to Bootstrap CSS file -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
		<!-- Link to the external CSS file -->
		<link href="css/App.css" rel="stylesheet" />
	</head>
	<body class="home-body">
		<!-- Apply home-body class to the body -->
		<div class="container">
			<!-- Apply Bootstrap's container class -->
			<h2>Register</h2>
			<!-- Use heading level 2 -->
			<% if (error) { %>
			<p class="text-danger"><%= error %></p>
			<!-- Use Bootstrap's text-danger class for error message -->
			<% } %>
			<form method="post" action="/register">
				<!-- Use action="/register" for the form -->
				<div class="mb-3">
					<!-- Apply Bootstrap's mb-3 class -->
					<label class="form-label">Username:</label>
					<!-- Use Bootstrap's form-label class -->
					<input type="text" class="form-control" name="username" required />
					<!-- Use Bootstrap's form-control class -->
				</div>
				<div class="mb-3">
					<!-- Apply Bootstrap's mb-3 class -->
					<label class="form-label">Password:</label>
					<!-- Use Bootstrap's form-label class -->
					<input
						type="password"
						class="form-control"
						name="password"
						required
					/>
					<!-- Use Bootstrap's form-control class -->
				</div>
				<button type="submit" class="btn btn-primary">Register</button>
				<!-- Use Bootstrap's btn and btn-primary classes -->
			</form>
		</div>
	</body>
</html>
